extends layout

block content
	div(id="fb-root")
	div(ng-app="", class="col-lg-2")
		h1 #{title}
		p(id="Name" class="lead") Welcome to #{title}
		br
		<fb:login-button scope="public_profile,email" onlogin="checkLoginState();"></fb:login-button>
		br
		br
	
		div#apiCallWrapper(class="input-group")
			input#apiCall(type='text', class="form-control", placeholder='Api Call...', ng-model="name")
			span(class="input-group-btn")
				button(id="btnapiCall" class="btn btn-primary") Call!
		br
		button(id="prevCall" class="btn btn-default text-center") Previous
		button(id="nextCall" class="btn btn-default text-center") Next

		br
		br
		div(id='status')
		p(ng-bind="name")