extends layout

block content
	div(id="fb-root")
	h1 #{title}
	p(id="Name" class="lead") Welcome to #{title}
	br
	<fb:login-button scope="public_profile,email" onlogin="checkLoginState();"></fb:login-button>
	br
	br
	div(ng-app="")
		fieldset
			div#apiCallWrapper
				input#apiCall(type='text', placeholder='apiCall', ng-model="name")
				button(id="btnapiCall" class="btn btn-primary") Call the API
		br
		button(id="prevCall" class="btn btn-default text-center") Previous
		button(id="nextCall" class="btn btn-default text-center") Next

		br
		br
		div(id='status')
		p(ng-bind="name")